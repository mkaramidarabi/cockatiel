{
  "compilerOptions": {
		"isolatedModules": true,
		"lib": ["ES2021"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es2021",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
		"noPropertyAccessFromIndexSignature": true,
		"typeRoots": ["src/interfaces"],
  },
	"exclude": [
		"test",
		"dist"
	],
	"include": ["src/server.ts", "src/interfaces/*.d.ts", "src/interfaces/enums.ts"]
}
