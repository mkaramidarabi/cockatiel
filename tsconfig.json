{
  "compilerOptions": {
		"isolatedModules": true,
		"lib": ["ES2021"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es2021",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
		"noPropertyAccessFromIndexSignature": true,
		"typeRoots": ["src/interfaces", "node_modules/@types"],
		"strict": true
  },
	"exclude": [
		"test",
		"dist"
	],
	"include": ["src/server.ts", "src/interfaces/*.d.ts", "src/interfaces/generalEnums.ts"],
	"ts-node": {
		"files": true
	},
	"files": [
    "src/interfaces/globals.d.ts",
		"src/interfaces/console.d.ts",
  ],
}
